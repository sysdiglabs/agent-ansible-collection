---
- name: Converge
  hosts: all
  strategy: free
  become: true
  roles:
    - role: sysdig.agent.agent_install
      vars:
        configuration:
          connection:
            access_key: ${AGENT_ACCESS_KEY}
            custom_collector:
              url: ${COLLECTOR_URL}
              port: ${COLLECTOR_PORT}
          agent:
            driver:
              install_build_dependencies: true
              type: kmod
          repository:
            deb:
              url: https://download.sysdig.com/rc/deb
              gpg_key: https://download.sysdig.com/DRAIOS-GPG-KEY.public
            rpm:
              url: https://download.sysdig.com/rc/rpm/$${HACK}basearch
              gpg_key: https://download.sysdig.com/DRAIOS-GPG-KEY.public
    - role: sysdig.agent.agent_uninstall
      vars:
        retain_agent_configuration: false
        retain_agent_logs: false
        retain_agent_repository_configuration: false
