---
- name: Converge
  hosts: all
  become: true
  roles:
    - role: sysdig.agent.agent_install
  vars:
    configuration:
      connection:
        access_key: ${AGENT_ACCESS_KEY}
        custom_collector:
          url: ${COLLECTOR_URL}
          port: ${COLLECTOR_PORT}
      agent:
        driver:
          install_build_dependencies: true
          type: kmodule
